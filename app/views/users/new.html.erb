<h1 class="heading1">Free Trial on Expense Management</h1>
<p></p>
<div class="paragraph">
<p>See why organisations around the world love Expense Management</p>
<p></p>
<p>Sign up for a free 14 day trial of Expense Management</p>
<p></p>
</div>

<div class="signup">
  <h2>Sign up</h2>
</div>

<div class="row">
  <div class="span6  well">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>


