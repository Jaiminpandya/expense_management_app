<h1>Listing Quantities</h1>


<%= form_tag quantities_path, :method => 'get' do  %>
  <p>
    <%= text_field_tag :search, params[:search], :class => "datepicker"  %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>

    <tr>
      <th>Name of Quantities</th>
      <th></th>
    </tr> 
 <% @quantities.each do |quantity| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">

  <td class="list_description">
   <dl>
     <dt><%= quantity.title %></dt>
     <dt><%= quantity.price %></dt>
     <dt><%= quantity.expense_on %></dt>
   </dl>
  </td>


  <td class="list_actions">
    <%= link_to 'Show', quantity %><br/>
    <%= link_to 'Edit', edit_quantity_path(quantity) %><br/>
    <%= link_to 'Destroy', quantity, method: :delete,
               data: { confirm: 'Are you sure?' } %>
  </td>

 </tr>
<% end %>
</table>

<br />

<%= link_to 'New quantity', new_quantity_path %><br>
<p></p>
<p></p>
